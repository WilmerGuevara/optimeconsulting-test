{% extends 'base.html.twig' %}

{% block body %}
    <h1>Products list</h1>
    <span># de productos: {{pagination.getTotalItemCount}}</span>
    <table>
        <thead>
            <tr>
                <th>{{knp_pagination_sortable(pagination, 'Id', 'p.id')}}</th>
                <th>{{knp_pagination_sortable(pagination, 'Code', 'p.code')}}</th>
                <th>{{knp_pagination_sortable(pagination, 'Name', 'p.name')}}</th>
                <th>Description</th>
                <th>Brand</th>
                <th>{{knp_pagination_sortable(pagination, 'Price', 'p.price')}}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in pagination %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.code }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.brand }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
    </ul>
{% endblock %}
