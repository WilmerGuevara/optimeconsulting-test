{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-sm-12">
        <h2>Producto: {{ product.name }}</h2>
        <table class="table table-hover table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Código</th>
                    <td>{{ product.code }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Descripción</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Marca</th>
                    <td>{{ product.brand }}</td>
                </tr>
                <tr>
                    <th>Precio</th>
                    <td>{{ product.price }}</td>
                </tr>
                 <tr>
                    <th>Categor&iacute;a</th>
                    <td>{{ product.category }}</td>
                </tr>
                 <tr>
                    <th>Categor&iacute;a activa</th>
                    <td>{% if product.category.active %}<span class="badge badge-success">Si</span>{% else %}<span class="badge badge-danger">No</span>{% endif %}</td>
                </tr>
            </tbody>
        </table>
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('product_index') }}">Volver al listado</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('product_edit', { 'id': product.id }) }}">Editar</a>
            </li>
            <li class="nav-item">
                {{ form_start(delete_form,{'onsubmit':'return confirmOption();'}) }}
                    <input class="btn btn-danger nav-link .delete-btn" type="submit" value="Eliminar">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
